<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewDstCam"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/image_view_dst_cam"
        android:background="@drawable/camview_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutSrcCamView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/camview_background"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewSrcCamTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/src_cam_title"
            android:textColor="@color/colorAccent"
            android:textSize="8sp" />

        <ImageView
            android:id="@+id/imageViewSrcCam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/image_view_src_cam"
            android:scaleType="fitXY" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutInputPanel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/caminputpanel_background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewSrcCamInputPanelTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="@string/src_cam_characteristics"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/textViewSrcCamHfovDeg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/src_cam_hfovdeg_label"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />

        <SeekBar
            android:id="@+id/seekBarSrcCamHfovDeg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="3600" />

        <TextView
            android:id="@+id/textViewSrcCamFocalOffset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/src_cam_focaloffset_label"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />

        <SeekBar
            android:id="@+id/seekBarSrcCamFocalOffset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="700" />

        <TextView
            android:id="@+id/textViewSrcCamPrincipalPointX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/src_cam_principalpointx_label"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:visibility="gone" />

        <SeekBar
            android:id="@+id/seekBarSrcCamPrincipalPointX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewSrcCamPrincipalPointY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/src_cam_principalpointy_label"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:visibility="gone" />

        <SeekBar
            android:id="@+id/seekBarSrcCamPrincipalPointY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/textViewDstCamInputPanelTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="@string/dst_cam_characteristics"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/textViewDstCamHfovDeg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/dst_cam_hfovdeg_label"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />

        <SeekBar
            android:id="@+id/seekBarDstCamHfovDeg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="1700" />

        <LinearLayout
            android:id="@+id/linearLayoutDstImageSizePx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/textViewDstImageSizePx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/dst_cam_imgsize_label"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/editTextDstImageWidthPx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                tools:ignore="Autofill" />

            <TextView
                android:id="@+id/textViewDstImageSizePxSeparator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/x"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/editTextDstImageHeightPx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                tools:ignore="Autofill" />

            <TextView
                android:id="@+id/textViewDstImageSizePxUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/px"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>